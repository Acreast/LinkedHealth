<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginPage">
   <children>
      <ImageView fitHeight="85.0" fitWidth="268.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/logoadobe.png" />
         </image>
      </ImageView>
      <TextField fx:id="txtUsername" layoutX="208.0" layoutY="145.0" prefHeight="26.0" prefWidth="207.0" promptText="Username" />
      <PasswordField fx:id="pwPassword" layoutX="208.0" layoutY="189.0" prefHeight="26.0" prefWidth="207.0" promptText="Password" />
      <Button fx:id="btnLogin" layoutX="359.0" layoutY="227.0" mnemonicParsing="false" onAction="#loginUser" prefHeight="26.0" prefWidth="56.0" style="-fx-background-color: black;" text="Login" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="btnSearch" layoutX="307.0" layoutY="265.0" mnemonicParsing="false" onAction="#emergencyQuery" prefHeight="27.0" prefWidth="110.0" style="-fx-background-color: white; -fx-background-radius: 0; -fx-border-color: black;" text="Emergency query">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="btnRegister" layoutX="362.0" layoutY="359.0" mnemonicParsing="false" onAction="#registerUser" prefHeight="26.0" prefWidth="224.0" style="-fx-background-color: transparent;" text="Don't have an account? Register here">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</AnchorPane>
